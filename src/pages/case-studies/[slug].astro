---
import Layout from '../../layouts/Layout.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const caseStudies = await getCollection('caseStudies');
  return caseStudies.map((study) => ({
    params: { slug: study.id },
    props: { study },
  }));
}

const { study } = Astro.props;
const { Content } = await render(study);
---

<Layout title={`${study.data.title} | Case Study`}>
  <article class="case-study">
    <div class="container">
      <header class="study-header">
        <a href="/case-studies" class="back-link">‚Üê Back to Case Studies</a>
        <div class="study-tags">
          <span class="badge badge-primary">{study.data.industry}</span>
          <span class="badge">{study.data.function}</span>
        </div>
        <h1>{study.data.title}</h1>
        <p class="study-excerpt">{study.data.excerpt}</p>
        
        <div class="study-metric-highlight">
          <span class="metric-value">{study.data.metric}</span>
          <span class="metric-detail">{study.data.metricDetail}</span>
        </div>

        <div class="study-tools">
          <span class="tools-label">Tools used:</span>
          {study.data.tools.map((tool: string) => (
            <span class="tool-badge">{tool}</span>
          ))}
        </div>
      </header>

      {study.data.thumbnail && (
        <div class="study-thumbnail">
          <img src={study.data.thumbnail} alt={study.data.title} />
        </div>
      )}

      <div class="study-content prose">
        <Content />
      </div>

      <footer class="study-footer">
        <div class="cta-box">
          <h3>Want Results Like These?</h3>
          <p>Let's explore how automation can save your team hours every week.</p>
          <a href="/contact" class="btn btn-primary btn-lg">üóìÔ∏è Book a Free Strategy Call</a>
        </div>
      </footer>
    </div>
  </article>
</Layout>

<style>
  .case-study {
    padding: var(--space-2xl) 0;
  }

  .study-header {
    max-width: 800px;
    margin: 0 auto var(--space-2xl);
    text-align: center;
  }

  .back-link {
    display: inline-block;
    margin-bottom: var(--space-lg);
    color: var(--color-text-muted);
    font-size: 0.875rem;
  }

  .back-link:hover {
    color: var(--color-primary);
  }

  .study-tags {
    display: flex;
    justify-content: center;
    gap: var(--space-sm);
    margin-bottom: var(--space-lg);
  }

  .study-header h1 {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    margin-bottom: var(--space-md);
  }

  .study-excerpt {
    font-size: 1.125rem;
    color: var(--color-text-muted);
    max-width: 600px;
    margin: 0 auto var(--space-xl);
  }

  .study-metric-highlight {
    background: linear-gradient(135deg, rgba(34, 197, 94, 0.1) 0%, rgba(16, 185, 129, 0.1) 100%);
    border: 1px solid var(--color-success);
    padding: var(--space-lg) var(--space-xl);
    border-radius: var(--radius-lg);
    display: inline-flex;
    flex-direction: column;
    gap: var(--space-xs);
    margin-bottom: var(--space-xl);
  }

  .metric-value {
    font-size: 2rem;
    font-weight: 800;
    color: var(--color-success);
  }

  .metric-detail {
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }

  .study-tools {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    gap: var(--space-sm);
  }

  .tools-label {
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }

  .tool-badge {
    font-size: 0.75rem;
    padding: 0.25rem 0.75rem;
    background-color: var(--color-bg-alt);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-full);
  }

  .study-thumbnail {
    max-width: 900px;
    margin: 0 auto var(--space-2xl);
    border-radius: var(--radius-xl);
    overflow: hidden;
  }

  .study-thumbnail img {
    width: 100%;
    height: auto;
  }

  .study-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .prose :global(h1),
  .prose :global(h2),
  .prose :global(h3),
  .prose :global(h4) {
    margin-top: var(--space-2xl);
    margin-bottom: var(--space-md);
  }

  .prose :global(p) {
    margin-bottom: var(--space-md);
    line-height: 1.8;
  }

  .prose :global(ul),
  .prose :global(ol) {
    margin-bottom: var(--space-md);
    padding-left: var(--space-lg);
  }

  .prose :global(li) {
    margin-bottom: var(--space-sm);
  }

  .prose :global(pre) {
    background-color: var(--color-bg-alt);
    padding: var(--space-lg);
    border-radius: var(--radius-md);
    overflow-x: auto;
    margin-bottom: var(--space-lg);
  }

  .prose :global(code) {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.875em;
  }

  .prose :global(blockquote) {
    border-left: 4px solid var(--color-primary);
    padding-left: var(--space-lg);
    font-style: italic;
    color: var(--color-text-muted);
    margin: var(--space-xl) 0;
  }

  .prose :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: var(--space-xl) 0;
  }

  .prose :global(th),
  .prose :global(td) {
    padding: var(--space-sm) var(--space-md);
    border: 1px solid var(--color-border);
    text-align: left;
  }

  .prose :global(th) {
    background-color: var(--color-bg-alt);
    font-weight: 600;
  }

  .study-footer {
    max-width: 800px;
    margin: var(--space-3xl) auto 0;
  }

  .cta-box {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
    padding: var(--space-2xl);
    border-radius: var(--radius-xl);
    text-align: center;
    color: white;
  }

  .cta-box h3 {
    color: white;
    margin-bottom: var(--space-sm);
  }

  .cta-box p {
    opacity: 0.9;
    margin-bottom: var(--space-lg);
  }

  .cta-box .btn-primary {
    background: white;
    color: var(--color-primary);
  }
</style>
