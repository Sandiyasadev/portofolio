---
import Layout from '../layouts/Layout.astro';
import Header from '../components/ui/Header.astro';
import Hero from '../components/ui/Hero.astro';
import BentoGrid from '../components/ui/BentoGrid.astro';
import ProjectShowcase from '../components/ui/ProjectShowcase.astro';
import AboutSection from '../components/ui/AboutSection.astro';
import Footer from '../components/ui/Footer.astro';

// Personal configuration
const siteConfig = {
  name: "Pande I Gede Sandiyasa",
  title: "Full-Stack Developer",
  tagline: "Membangun pengalaman digital yang bermakna melalui kode yang bersih dan desain yang thoughtful.",
  email: "sandiyasadev@gmail.com",
  location: "Bali, Indonesia",
  availableFor: "2025"
};
---

<Layout title={`${siteConfig.name} - ${siteConfig.title} Portfolio`}>
  <Header />
  
  <main>
    <Hero 
      name={siteConfig.name}
      title={siteConfig.title}
      tagline={siteConfig.tagline}
    />
    
    <BentoGrid />
    
    <ProjectShowcase />
    
    <AboutSection />
  </main>
  
  <Footer 
    name={siteConfig.name}
    email={siteConfig.email}
    location={siteConfig.location}
    availableFor={siteConfig.availableFor}
  />
</Layout>
