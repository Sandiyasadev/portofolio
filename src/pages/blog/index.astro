---
import Layout from '../../layouts/Layout.astro';
import Icon from '../../components/ui/Icon.astro';

const posts = [
  {
    slug: 'n8n-vs-zapier-which-to-choose',
    title: 'n8n vs Zapier: Which Automation Tool Should You Choose in 2024?',
    category: 'n8n Best Practices',
    excerpt: 'A detailed comparison of n8n and Zapier covering pricing, features, hosting options, and ideal use cases for each platform.',
    date: '2024-11-28',
    readTime: '8 min read',
    featured: true,
    thumbnail: 'https://images.unsplash.com/photo-1558494949-ef010cbdcc31?w=600&h=400&fit=crop'
  },
  {
    slug: 'automating-lead-enrichment-with-ai',
    title: 'How to Build an AI-Powered Lead Enrichment Pipeline with n8n',
    category: 'Integration Guides',
    excerpt: 'Step-by-step guide to building a workflow that automatically enriches leads with company data and generates AI-based qualification scores.',
    date: '2024-11-15',
    readTime: '12 min read',
    featured: true,
    thumbnail: 'https://images.unsplash.com/photo-1551288049-bebda4e38f71?w=600&h=400&fit=crop'
  },
  {
    slug: 'calculating-automation-roi',
    title: 'How to Calculate ROI for Your Automation Projects',
    category: 'Automation ROI Stories',
    excerpt: 'A practical framework for measuring the real business impact of automation, including templates and real-world examples.',
    date: '2024-11-01',
    readTime: '6 min read',
    featured: false,
    thumbnail: 'https://images.unsplash.com/photo-1460925895917-afdab827c52f?w=600&h=400&fit=crop'
  },
  {
    slug: 'n8n-error-handling-best-practices',
    title: 'Error Handling in n8n: Building Resilient Workflows',
    category: 'n8n Best Practices',
    excerpt: 'Learn how to build n8n workflows that gracefully handle errors, retry failed operations, and alert you when things go wrong.',
    date: '2024-10-20',
    readTime: '10 min read',
    featured: false,
    thumbnail: 'https://images.unsplash.com/photo-1555949963-ff9fe0c870eb?w=600&h=400&fit=crop'
  },
  {
    slug: 'integrating-chatgpt-with-n8n',
    title: 'Integrating ChatGPT with n8n: 5 Practical Use Cases',
    category: 'AI-Assisted Ops',
    excerpt: 'Discover five practical ways to integrate OpenAI\'s GPT models into your n8n workflows for smarter automation.',
    date: '2024-10-05',
    readTime: '9 min read',
    featured: true,
    thumbnail: 'https://images.unsplash.com/photo-1677442136019-21780ecad995?w=600&h=400&fit=crop'
  },
  {
    slug: 'slack-airtable-workflow-tutorial',
    title: 'Building a Slack + Airtable Task Manager with n8n',
    category: 'Integration Guides',
    excerpt: 'Create a powerful task management system that syncs Slack messages to Airtable and keeps your team organized.',
    date: '2024-09-18',
    readTime: '7 min read',
    featured: false,
    thumbnail: 'https://images.unsplash.com/photo-1611224923853-80b023f02d71?w=600&h=400&fit=crop'
  }
];

const categories = [...new Set(posts.map(p => p.category))];
const featuredPosts = posts.filter(p => p.featured).slice(0, 2);
const recentPosts = posts.filter(p => !featuredPosts.includes(p));

function formatDate(dateString: string): string {
  return new Date(dateString).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}
---

<Layout title="Blog | n8n Expert - Automation Insights">
  <!-- Page Header -->
  <section class="page-header">
    <div class="container">
      <div class="hero-animate" style="--delay: 0.1s"><span class="badge badge-primary">Blog</span></div>
      <h1 class="hero-animate" style="--delay: 0.2s">Automation <span class="gradient-text-animated">Insights</span></h1>
      <p class="page-subtitle hero-animate" style="--delay: 0.3s">
        Practical guides, best practices, and lessons learned from 500+ workflow implementations.
      </p>
    </div>
  </section>

  <!-- Featured Posts -->
  <section class="section">
    <div class="container">
      <h2 class="section-title reveal">Featured Articles</h2>
      <div class="featured-grid reveal-stagger">
        {featuredPosts.map(post => (
          <article class="featured-post hover-lift">
            <div class="featured-image">
              <img src={post.thumbnail} alt={post.title} loading="lazy" />
            </div>
            <div class="featured-content">
              <div class="post-meta">
                <span class="badge">{post.category}</span>
                <span class="post-date">{formatDate(post.date)}</span>
                <span class="read-time">{post.readTime}</span>
              </div>
              <h3><a href={`/blog/${post.slug}`}>{post.title}</a></h3>
              <p>{post.excerpt}</p>
              <a href={`/blog/${post.slug}`} class="read-more">Read more →</a>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- Category Filter + All Posts -->
  <section class="section section-alt">
    <div class="container">
      <div class="blog-layout">
        <!-- Sidebar -->
        <aside class="blog-sidebar reveal-left">
          <div class="sidebar-section">
            <h4>Categories</h4>
            <ul class="category-list">
              {categories.map(category => (
                <li>
                  <a href={`/blog?category=${encodeURIComponent(category)}`} class="link-underline">
                    {category}
                  </a>
                </li>
              ))}
            </ul>
          </div>

          <div class="sidebar-section newsletter-section">
            <div class="newsletter-icon">
              <Icon name="mail" size={24} />
            </div>
            <h4>Newsletter</h4>
            <p>Get automation tips delivered to your inbox weekly.</p>
            <form class="newsletter-form" id="newsletter-form">
              <div class="newsletter-input-wrapper">
                <Icon name="mail" size={18} />
                <input 
                  type="email" 
                  name="email" 
                  placeholder="your@email.com" 
                  required 
                />
              </div>
              <button type="submit" class="btn btn-primary newsletter-btn">
                <span class="btn-text">
                  <Icon name="send" size={16} />
                  Subscribe
                </span>
                <span class="btn-loading">
                  <span class="spinner"></span>
                </span>
              </button>
            </form>
            <p class="newsletter-note">
              <Icon name="shield" size={12} />
              No spam, unsubscribe anytime.
            </p>
          </div>
        </aside>

        <!-- Posts Grid -->
        <div class="posts-section">
          <h2 class="section-title reveal">All Articles</h2>
          <div class="posts-grid reveal-stagger">
            {recentPosts.map(post => (
              <article class="post-card hover-lift">
                <div class="post-thumbnail">
                  <img src={post.thumbnail} alt={post.title} loading="lazy" />
                </div>
                <div class="post-content">
                  <div class="post-meta">
                    <span class="badge">{post.category}</span>
                    <span class="post-date">{formatDate(post.date)}</span>
                  </div>
                  <h3><a href={`/blog/${post.slug}`}>{post.title}</a></h3>
                  <p>{post.excerpt}</p>
                  <div class="post-footer">
                    <span class="read-time">{post.readTime}</span>
                    <a href={`/blog/${post.slug}`} class="read-more">Read →</a>
                  </div>
                </div>
              </article>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="cta-section section">
    <div class="container">
      <div class="cta-box reveal-scale">
        <div class="cta-icon">
          <Icon name="mail" size={32} />
        </div>
        <h2>Want Automation Tips in Your Inbox?</h2>
        <p>Join 500+ automation enthusiasts. No spam, just actionable insights.</p>
        <form class="inline-newsletter" id="cta-newsletter-form">
          <div class="inline-input-wrapper">
            <Icon name="mail" size={18} />
            <input type="email" placeholder="your@email.com" required />
          </div>
          <button type="submit" class="btn btn-primary cta-btn">
            <span class="btn-text">
              <Icon name="send" size={16} />
              Subscribe
            </span>
            <span class="btn-loading">
              <span class="spinner"></span>
            </span>
          </button>
        </form>
        <p class="cta-note">
          <Icon name="shield" size={14} />
          We respect your privacy. Unsubscribe anytime.
        </p>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Page Header */
  .page-header {
    padding: var(--space-3xl) 0 var(--space-2xl);
    background: linear-gradient(180deg, var(--color-bg) 0%, var(--color-bg-alt) 100%);
    text-align: center;
  }

  /* Hero animations */
  .hero-animate {
    opacity: 0;
    transform: translateY(30px);
    animation: heroFadeIn 0.8s cubic-bezier(0.23, 1, 0.32, 1) forwards;
    animation-delay: var(--delay, 0s);
  }

  @keyframes heroFadeIn {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .page-header .badge {
    margin-bottom: var(--space-lg);
  }

  .page-header h1 {
    margin-bottom: var(--space-md);
  }

  .page-subtitle {
    font-size: 1.125rem;
    max-width: 550px;
    margin: 0 auto;
  }

  .section-title {
    font-size: 1.5rem;
    margin-bottom: var(--space-xl);
  }

  /* Featured Posts */
  .featured-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-xl);
  }

  @media (min-width: 1024px) {
    .featured-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .featured-post {
    background-color: var(--color-bg-card);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    overflow: hidden;
    transition: all var(--transition-base);
  }

  .featured-post:hover {
    box-shadow: var(--shadow-lg);
    transform: translateY(-4px);
  }

  .featured-image {
    aspect-ratio: 16/9;
    overflow: hidden;
  }

  .featured-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-slow);
  }

  .featured-post:hover .featured-image img {
    transform: scale(1.05);
  }

  .featured-content {
    padding: var(--space-xl);
  }

  .post-meta {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: var(--space-sm);
    margin-bottom: var(--space-md);
    font-size: 0.75rem;
    color: var(--color-text-muted);
  }

  .featured-content h3 {
    font-size: 1.25rem;
    margin-bottom: var(--space-md);
  }

  .featured-content h3 a {
    color: var(--color-text);
  }

  .featured-content h3 a:hover {
    color: var(--color-primary);
  }

  .featured-content p {
    font-size: 0.9375rem;
    margin-bottom: var(--space-md);
  }

  .read-more {
    font-weight: 600;
    font-size: 0.875rem;
  }

  /* Blog Layout */
  .blog-layout {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-2xl);
  }

  @media (min-width: 1024px) {
    .blog-layout {
      grid-template-columns: 280px 1fr;
    }
  }

  /* Sidebar */
  .blog-sidebar {
    display: flex;
    flex-direction: column;
    gap: var(--space-xl);
  }

  .sidebar-section {
    background-color: var(--color-bg-card);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: var(--space-lg);
  }

  .sidebar-section h4 {
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--space-md);
  }

  .category-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .category-list li {
    margin-bottom: var(--space-sm);
  }

  .category-list a {
    color: var(--color-text-muted);
    font-size: 0.875rem;
  }

  .category-list a:hover {
    color: var(--color-primary);
  }

  .newsletter-section {
    text-align: center;
  }

  .newsletter-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    margin: 0 auto var(--space-md);
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.1) 0%, rgba(6, 182, 212, 0.1) 100%);
    border-radius: var(--radius-lg);
    color: var(--color-primary);
  }

  .newsletter-form {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .newsletter-input-wrapper {
    position: relative;
    display: flex;
    align-items: center;
  }

  .newsletter-input-wrapper :global(.icon) {
    position: absolute;
    left: 12px;
    color: var(--color-text-muted);
    transition: color 0.3s ease;
  }

  .newsletter-input-wrapper input {
    width: 100%;
    padding: 0.75rem 1rem 0.75rem 2.5rem;
    background-color: var(--color-bg);
    border: 2px solid var(--color-border);
    border-radius: var(--radius-lg);
    font-size: 0.875rem;
    color: var(--color-text);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    outline: none;
  }

  .newsletter-input-wrapper input:hover {
    border-color: var(--color-text-muted);
  }

  .newsletter-input-wrapper input:focus {
    border-color: var(--color-primary);
    box-shadow: 0 0 0 4px rgba(59, 130, 246, 0.1);
  }

  .newsletter-input-wrapper input:focus + :global(.icon),
  .newsletter-input-wrapper:focus-within :global(.icon) {
    color: var(--color-primary);
  }

  .newsletter-btn {
    width: 100%;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .newsletter-btn .btn-text {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
  }

  .newsletter-btn .btn-loading {
    display: none;
  }

  .newsletter-btn.loading .btn-text {
    display: none;
  }

  .newsletter-btn.loading .btn-loading {
    display: inline-flex;
  }

  .newsletter-btn:hover:not(:disabled) {
    transform: translateY(-2px);
  }

  .newsletter-note {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-xs);
    font-size: 0.75rem;
    color: var(--color-text-muted);
    margin-top: var(--space-sm);
  }

  /* Spinner Animation */
  .spinner {
    width: 16px;
    height: 16px;
    border: 2px solid transparent;
    border-top-color: currentColor;
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  /* Posts Grid */
  .posts-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-lg);
  }

  .post-card {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-md);
    background-color: var(--color-bg-card);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    overflow: hidden;
    transition: all var(--transition-base);
  }

  .post-card:hover {
    box-shadow: var(--shadow-md);
  }

  @media (min-width: 640px) {
    .post-card {
      grid-template-columns: 200px 1fr;
    }
  }

  .post-thumbnail {
    aspect-ratio: 16/9;
    overflow: hidden;
  }

  @media (min-width: 640px) {
    .post-thumbnail {
      aspect-ratio: 1;
    }
  }

  .post-thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .post-content {
    padding: var(--space-md);
    display: flex;
    flex-direction: column;
  }

  .post-content h3 {
    font-size: 1rem;
    margin-bottom: var(--space-sm);
  }

  .post-content h3 a {
    color: var(--color-text);
  }

  .post-content h3 a:hover {
    color: var(--color-primary);
  }

  .post-content p {
    font-size: 0.875rem;
    flex: 1;
    margin-bottom: var(--space-md);
  }

  .post-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.75rem;
  }

  .read-time {
    color: var(--color-text-muted);
  }

  /* CTA Section */
  .cta-box {
    text-align: center;
    max-width: 550px;
    margin: 0 auto;
    padding: var(--space-2xl);
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.1) 0%, rgba(6, 182, 212, 0.1) 100%);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
  }

  .cta-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 64px;
    height: 64px;
    margin: 0 auto var(--space-lg);
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.15) 0%, rgba(6, 182, 212, 0.15) 100%);
    border-radius: var(--radius-xl);
    color: var(--color-primary);
  }

  .cta-box h2 {
    margin-bottom: var(--space-md);
  }

  .cta-box > p {
    margin-bottom: var(--space-xl);
  }

  .inline-newsletter {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  @media (min-width: 480px) {
    .inline-newsletter {
      flex-direction: row;
    }
  }

  .inline-input-wrapper {
    position: relative;
    display: flex;
    align-items: center;
    flex: 1;
  }

  .inline-input-wrapper :global(.icon) {
    position: absolute;
    left: 14px;
    color: var(--color-text-muted);
    transition: color 0.3s ease;
    z-index: 1;
  }

  .inline-input-wrapper input {
    width: 100%;
    padding: 0.875rem 1rem 0.875rem 2.75rem;
    background-color: var(--color-bg);
    border: 2px solid var(--color-border);
    border-radius: var(--radius-lg);
    font-size: 1rem;
    color: var(--color-text);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    outline: none;
  }

  .inline-input-wrapper input:hover {
    border-color: var(--color-text-muted);
  }

  .inline-input-wrapper input:focus {
    border-color: var(--color-primary);
    box-shadow: 0 0 0 4px rgba(59, 130, 246, 0.1);
  }

  .inline-input-wrapper input:focus ~ :global(.icon),
  .inline-input-wrapper:focus-within :global(.icon) {
    color: var(--color-primary);
  }

  .cta-btn .btn-text {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
  }

  .cta-btn .btn-loading {
    display: none;
  }

  .cta-btn.loading .btn-text {
    display: none;
  }

  .cta-btn.loading .btn-loading {
    display: inline-flex;
  }

  .cta-note {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-xs);
    font-size: 0.8125rem;
    color: var(--color-text-muted);
    margin-top: var(--space-md);
  }
</style>
