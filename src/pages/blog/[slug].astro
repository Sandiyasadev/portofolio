---
import Layout from '../../layouts/Layout.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.id },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);

function formatDate(dateString: string): string {
  return new Date(dateString).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}
---

<Layout title={`${post.data.title} | Blog`}>
  <article class="blog-post">
    <div class="container">
      <header class="post-header">
        <a href="/blog" class="back-link">‚Üê Back to Blog</a>
        <div class="post-meta">
          <span class="badge badge-primary">{post.data.category}</span>
          <span class="post-date">{formatDate(post.data.date)}</span>
          <span class="read-time">{post.data.readTime}</span>
        </div>
        <h1>{post.data.title}</h1>
        <p class="post-excerpt">{post.data.excerpt}</p>
      </header>

      {post.data.thumbnail && (
        <div class="post-thumbnail">
          <img src={post.data.thumbnail} alt={post.data.title} />
        </div>
      )}

      <div class="post-content prose">
        <Content />
      </div>

      <footer class="post-footer">
        <div class="cta-box">
          <h3>Need Help with Automation?</h3>
          <p>Let's discuss how I can help streamline your operations.</p>
          <a href="/contact" class="btn btn-primary">Book a Free Call</a>
        </div>
      </footer>
    </div>
  </article>
</Layout>

<style>
  .blog-post {
    padding: var(--space-2xl) 0;
  }

  .post-header {
    max-width: 800px;
    margin: 0 auto var(--space-2xl);
    text-align: center;
  }

  .back-link {
    display: inline-block;
    margin-bottom: var(--space-lg);
    color: var(--color-text-muted);
    font-size: 0.875rem;
  }

  .back-link:hover {
    color: var(--color-primary);
  }

  .post-meta {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: var(--space-md);
    margin-bottom: var(--space-lg);
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }

  .post-header h1 {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    margin-bottom: var(--space-md);
  }

  .post-excerpt {
    font-size: 1.125rem;
    color: var(--color-text-muted);
    max-width: 600px;
    margin: 0 auto;
  }

  .post-thumbnail {
    max-width: 900px;
    margin: 0 auto var(--space-2xl);
    border-radius: var(--radius-xl);
    overflow: hidden;
  }

  .post-thumbnail img {
    width: 100%;
    height: auto;
  }

  .post-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .prose :global(h1),
  .prose :global(h2),
  .prose :global(h3),
  .prose :global(h4) {
    margin-top: var(--space-2xl);
    margin-bottom: var(--space-md);
  }

  .prose :global(p) {
    margin-bottom: var(--space-md);
    line-height: 1.8;
  }

  .prose :global(ul),
  .prose :global(ol) {
    margin-bottom: var(--space-md);
    padding-left: var(--space-lg);
  }

  .prose :global(li) {
    margin-bottom: var(--space-sm);
  }

  .prose :global(pre) {
    background-color: var(--color-bg-alt);
    padding: var(--space-lg);
    border-radius: var(--radius-md);
    overflow-x: auto;
    margin-bottom: var(--space-lg);
  }

  .prose :global(code) {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.875em;
  }

  .prose :global(blockquote) {
    border-left: 4px solid var(--color-primary);
    padding-left: var(--space-lg);
    font-style: italic;
    color: var(--color-text-muted);
    margin: var(--space-xl) 0;
  }

  .prose :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: var(--space-xl) 0;
  }

  .prose :global(th),
  .prose :global(td) {
    padding: var(--space-sm) var(--space-md);
    border: 1px solid var(--color-border);
    text-align: left;
  }

  .prose :global(th) {
    background-color: var(--color-bg-alt);
    font-weight: 600;
  }

  .post-footer {
    max-width: 800px;
    margin: var(--space-3xl) auto 0;
  }

  .cta-box {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
    padding: var(--space-2xl);
    border-radius: var(--radius-xl);
    text-align: center;
    color: white;
  }

  .cta-box h3 {
    color: white;
    margin-bottom: var(--space-sm);
  }

  .cta-box p {
    opacity: 0.9;
    margin-bottom: var(--space-lg);
  }

  .cta-box .btn-primary {
    background: white;
    color: var(--color-primary);
  }
</style>
