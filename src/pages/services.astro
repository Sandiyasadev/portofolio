</Layout>

<style>
  /* Page Header */
  .page-header {
    padding: var(--space-3xl) 0 var(--space-2xl);
    background: linear-gradient(180deg, var(--color-bg) 0%, var(--color-bg-alt) 100%);
    text-align: center;
  }

  .page-header .badge {
    margin-bottom: var(--space-lg);
  }

  .page-header h1 {
    margin-bottom: var(--space-md);
  }

  .page-subtitle {
    font-size: 1.125rem;
    max-width: 600px;
    margin: 0 auto;
  }

  /* Services Grid */
  .services-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-xl);
  }

  @media (min-width: 1024px) {
    .services-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  /* Service Card */
  .service-card {
    background-color: var(--color-bg-card);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    padding: var(--space-xl);
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
    scroll-margin-top: 100px;
  }

  .service-header {
    display: flex;
    align-items: flex-start;
    gap: var(--space-md);
  }

  .service-icon {
    font-size: 2.5rem;
  }

  .service-header h2 {
    margin: 0;
    font-size: 1.5rem;
  }

  .service-tagline {
    margin: 0;
    font-size: 0.9375rem;
    margin-top: var(--space-xs);
  }

  .service-outcome {
    background-color: var(--color-bg-alt);
    border-radius: var(--radius-md);
    padding: var(--space-md);
  }

  .service-outcome h3 {
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text-muted);
    margin-bottom: var(--space-sm);
  }

  .service-outcome p {
    margin: 0;
    color: var(--color-text);
    font-weight: 500;
  }

  .service-details {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-lg);
  }

  @media (min-width: 640px) {
    .service-details {
      grid-template-columns: 1fr 1fr;
    }
  }

  .service-section h4 {
    font-size: 0.875rem;
    margin-bottom: var(--space-sm);
  }

  .service-section ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .service-section li {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    padding-left: 1.25rem;
    position: relative;
    margin-bottom: var(--space-xs);
  }

  .service-section li::before {
    content: '‚úì';
    position: absolute;
    left: 0;
    color: var(--color-success);
  }

  .service-meta {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-lg);
    padding: var(--space-md) 0;
    border-top: 1px solid var(--color-border);
    border-bottom: 1px solid var(--color-border);
  }

  .meta-item {
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }

  .meta-label {
    font-size: 0.75rem;
    color: var(--color-text-muted);
  }

  .meta-value {
    font-weight: 600;
    color: var(--color-text);
  }

  .service-tools {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: var(--space-sm);
  }

  .tools-label {
    font-size: 0.75rem;
    color: var(--color-text-muted);
  }

  .tools-badges {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
  }

  .service-cta {
    margin-top: auto;
    text-align: center;
  }

  /* Not Sure Box */
  .not-sure-box {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: var(--space-xl);
    padding: var(--space-2xl);
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.1) 0%, rgba(6, 182, 212, 0.1) 100%);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
  }

  .not-sure-content h2 {
    margin-bottom: var(--space-md);
  }

  .not-sure-content p {
    max-width: 600px;
    margin: 0;
  }

  @media (min-width: 1024px) {
    .not-sure-box {
      flex-direction: row;
      text-align: left;
      justify-content: space-between;
    }
  }

  /* Process Timeline */
  .process-timeline {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-lg);
    margin-top: var(--space-2xl);
  }

  .process-step {
    background-color: var(--color-bg-card);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: var(--space-lg);
    text-align: center;
  }

  .step-number {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-accent) 100%);
    color: white;
    font-weight: 700;
    border-radius: var(--radius-full);
    margin-bottom: var(--space-md);
  }

  .process-step h3 {
    font-size: 1.125rem;
    margin-bottom: var(--space-sm);
  }

  .process-step p {
    font-size: 0.875rem;
    margin: 0;
  }

  .process-arrow {
    display: none;
    font-size: 1.5rem;
    color: var(--color-text-muted);
    align-self: center;
  }

  @media (min-width: 1024px) {
    .process-timeline {
      grid-template-columns: 1fr auto 1fr auto 1fr auto 1fr;
      align-items: center;
    }

    .process-arrow {
      display: block;
    }
  }
</style>
