---

<Layout title="Services | n8n Expert - Automation Services">
  <!-- Page Header -->
  <section class="page-header">
    <div class="container">
      <span class="badge badge-primary">Services</span>
      <h1>Automation Services <span class="gradient-text">That Deliver Results</span></h1>
      <p class="page-subtitle">
        From discovery to deployment to ongoing optimization‚Äîend-to-end automation services tailored to your business needs.
      </p>
    </div>
  </section>

  <!-- Services Grid -->
  <section class="section">
    <div class="container">
      <div class="services-grid">
        {services.map((service) => (
          <article id={service.id} class="service-card">
            <div class="service-header">
              <span class="service-icon">{service.icon}</span>
              <div>
                <h2>{service.title}</h2>
                <p class="service-tagline">{service.tagline}</p>
              </div>
            </div>

            <div class="service-outcome">
              <h3>Outcome</h3>
              <p>{service.outcome}</p>
            </div>

            <div class="service-details">
              <div class="service-section">
                <h4>üì¶ Deliverables</h4>
                <ul>
                  {service.deliverables.map((item) => (
                    <li>{item}</li>
                  ))}
                </ul>
              </div>

              <div class="service-section">
                <h4>‚úÖ What You'll Get</h4>
                <ul>
                  {service.whatYouGet.map((item) => (
                    <li set:html={item} />
                  ))}
