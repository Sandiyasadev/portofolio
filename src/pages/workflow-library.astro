<style>
  /* Page Header */
  .page-header {
    padding: var(--space-3xl) 0 var(--space-2xl);
    background: linear-gradient(180deg, var(--color-bg) 0%, var(--color-bg-alt) 100%);
    text-align: center;
  }

  .page-header .badge {
    margin-bottom: var(--space-lg);
  }

  .page-header h1 {
    margin-bottom: var(--space-md);
  }

  .page-subtitle {
    font-size: 1.125rem;
    max-width: 550px;
    margin: 0 auto;
  }

  /* Filter Section */
  .filter-section {
    padding: var(--space-lg) 0;
    background-color: var(--color-bg-alt);
    border-bottom: 1px solid var(--color-border);
    position: sticky;
    top: 72px;
    z-index: 40;
  }

  .category-pills {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
    justify-content: center;
  }

  .category-pill {
    padding: var(--space-sm) var(--space-md);
    background-color: var(--color-bg-card);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-full);
    font-size: 0.875rem;
    font-weight: 500;
    cursor: pointer;
    transition: all var(--transition-fast);
  }

  .category-pill:hover {
    border-color: var(--color-primary);
    color: var(--color-primary);
  }

  .category-pill.active {
    background-color: var(--color-primary);
    border-color: var(--color-primary);
    color: white;
  }

  /* Workflows Grid */
  .workflows-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-xl);
  }

  @media (min-width: 768px) {
    .workflows-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1280px) {
    .workflows-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  /* Workflow Card */
  .workflow-card {
    background-color: var(--color-bg-card);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    padding: var(--space-xl);
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
    transition: all var(--transition-base);
  }

  .workflow-card:hover {
    box-shadow: var(--shadow-lg);
    transform: translateY(-4px);
  }

  .workflow-card.hidden {
    display: none;
  }

  .workflow-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .workflow-icon {
    font-size: 2rem;
  }

  .workflow-card h2 {
    font-size: 1.125rem;
    margin: 0;
  }

  .workflow-usecase {
    font-size: 0.875rem;
    margin: 0;
    flex: 1;
  }

  .workflow-meta {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-lg);
  }

  .meta-item {
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
  }

  .meta-label {
    font-size: 0.6875rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text-muted);
  }

  .meta-value {
    font-size: 0.875rem;
    font-weight: 500;
  }

  .complexity-beginner { color: var(--color-success); }
  .complexity-intermediate { color: var(--color-warning); }
  .complexity-advanced { color: var(--color-error); }

  .workflow-nodes {
    padding-top: var(--space-md);
    border-top: 1px solid var(--color-border);
  }

  .nodes-label {
    font-size: 0.75rem;
    color: var(--color-text-muted);
    display: block;
    margin-bottom: var(--space-sm);
  }

  .nodes-list {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
  }

  .node-badge {
    font-size: 0.6875rem;
    padding: 0.125rem 0.5rem;
    background-color: var(--color-bg-alt);
    border-radius: var(--radius-full);
    color: var(--color-text-muted);
  }

  .request-btn {
    margin-top: auto;
  }

  /* Modal */
  .modal {
    position: fixed;
    inset: 0;
    z-index: 100;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-lg);
  }

  .modal-backdrop {
    position: absolute;
    inset: 0;
    background-color: rgba(0, 0, 0, 0.6);
  }

  .modal-content {
    position: relative;
    background-color: var(--color-bg-card);
    border-radius: var(--radius-xl);
    padding: var(--space-2xl);
    max-width: 420px;
    width: 100%;
    max-height: 90vh;
    overflow-y: auto;
  }

  .modal-close {
    position: absolute;
    top: var(--space-md);
    right: var(--space-md);
    background: none;
    border: none;
    font-size: 1.5rem;
    cursor: pointer;
    color: var(--color-text-muted);
  }

  .modal-header {
    text-align: center;
    margin-bottom: var(--space-xl);
  }

  .modal-icon {
    font-size: 2.5rem;
    display: block;
    margin-bottom: var(--space-md);
  }

  .modal-header h3 {
    margin: 0 0 var(--space-sm);
  }

  .modal-subtitle {
    font-size: 0.875rem;
    margin: 0;
    color: var(--color-primary);
    font-weight: 500;
  }

  .modal-form .form-group {
    margin-bottom: var(--space-lg);
  }

  .modal-form label {
    display: block;
    font-weight: 600;
    font-size: 0.875rem;
    margin-bottom: var(--space-xs);
  }

  .modal-form input {
    width: 100%;
    padding: var(--space-sm) var(--space-md);
    background-color: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    font-size: 1rem;
    color: var(--color-text);
  }

  .modal-form input:focus {
    outline: none;
    border-color: var(--color-primary);
  }

  .modal-form .btn {
    width: 100%;
  }

  .modal-note {
    font-size: 0.75rem;
    text-align: center;
    margin: var(--space-md) 0 0;
  }

  .modal-success {
    text-align: center;
  }

  .modal-success .success-icon {
    font-size: 3rem;
    display: block;
    margin-bottom: var(--space-md);
  }

  .modal-success h4 {
    margin: 0 0 var(--space-sm);
  }

  .modal-success p {
    margin-bottom: var(--space-lg);
  }

  /* Custom CTA */
  .custom-cta {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-xl);
    text-align: center;
    padding: var(--space-2xl);
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.1) 0%, rgba(6, 182, 212, 0.1) 100%);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
  }

  .custom-cta-content h2 {
    margin-bottom: var(--space-md);
  }

  .custom-cta-content p {
    max-width: 500px;
    margin: 0;
  }

  @media (min-width: 1024px) {
    .custom-cta {
      flex-direction: row;
      text-align: left;
      justify-content: space-between;
    }
  }
</style>

<script>
  // Category filter
  const categoryPills = document.querySelectorAll('.category-pill');
  const workflowCards = document.querySelectorAll('.workflow-card');

  categoryPills.forEach(pill => {
    pill.addEventListener('click', () => {
      const category = (pill as HTMLElement).dataset.category;
      
      // Update active pill
      categoryPills.forEach(p => p.classList.remove('active'));
      pill.classList.add('active');
      
      // Filter cards
      workflowCards.forEach(card => {
        const cardCategory = (card as HTMLElement).dataset.category;
        if (!category || cardCategory === category) {
          card.classList.remove('hidden');
        } else {
          card.classList.add('hidden');
        }
      });
    });
  });

  // Modal
  const modal = document.getElementById('request-modal');
  const modalBackdrop = modal?.querySelector('.modal-backdrop');
  const modalClose = modal?.querySelector('.modal-close');
  const modalCloseBtn = modal?.querySelector('.modal-close-btn');
  const modalWorkflowName = document.getElementById('modal-workflow-name');
  const workflowSlugInput = document.getElementById('workflow-slug') as HTMLInputElement;
  const requestForm = document.getElementById('template-request-form') as HTMLFormElement;
  const modalSuccess = document.getElementById('modal-success');

  const requestButtons = document.querySelectorAll('.request-btn');

  function openModal(slug: string, title: string) {
    if (modal && modalWorkflowName && workflowSlugInput) {
      modalWorkflowName.textContent = title;
      workflowSlugInput.value = slug;
      modal.style.display = 'flex';
      requestForm.style.display = 'block';
      modalSuccess!.style.display = 'none';
    }
  }

  function closeModal() {
    if (modal) {
      modal.style.display = 'none';
    }
  }

  requestButtons.forEach(btn => {
    btn.addEventListener('click', () => {
      const slug = (btn as HTMLElement).dataset.workflow || '';
      const title = (btn as HTMLElement).dataset.title || '';
      openModal(slug, title);
    });
  });

  modalBackdrop?.addEventListener('click', closeModal);
  modalClose?.addEventListener('click', closeModal);
  modalCloseBtn?.addEventListener('click', closeModal);

  // Form submission
  requestForm?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const submitBtn = requestForm.querySelector('button[type="submit"]') as HTMLButtonElement;
    const btnText = submitBtn.querySelector('.btn-text') as HTMLElement;
    const btnLoading = submitBtn.querySelector('.btn-loading') as HTMLElement;

    submitBtn.disabled = true;
    btnText.style.display = 'none';
    btnLoading.style.display = 'inline';

    try {
      const formData = new FormData(requestForm);
      const data = Object.fromEntries(formData.entries());

      // Send to n8n webhook
      const webhookUrl = 'https://your-n8n-instance.com/webhook/lead-template';
      
      await fetch(webhookUrl, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data),
      });

      // Track analytics
      if (typeof window !== 'undefined' && (window as any).gtag) {
        (window as any).gtag('event', 'submit_form_template', {
          'event_category': 'lead',
          'event_label': data.workflow_slug
        });
      }

      requestForm.style.display = 'none';
      modalSuccess!.style.display = 'block';
    } catch (error) {
      console.error('Form error:', error);
      alert('Something went wrong. Please try again or email directly.');
    } finally {
      submitBtn.disabled = false;
      btnText.style.display = 'inline';
      btnLoading.style.display = 'none';
    }
  });
</script>
