---
import Layout from '../layouts/Layout.astro';
import Icon from '../components/ui/Icon.astro';

const workflows = [
  {
    slug: 'lead-capture-crm-slack',
    title: 'Lead Capture to CRM + Slack Alert',
    category: 'Lead Management',
    trigger: 'Webhook (Form)',
    nodes: ['Webhook', 'HTTP Request', 'Airtable', 'Slack'],
    useCase: 'Capture form submissions, enrich lead data, store in CRM, alert sales team',
    complexity: 'Beginner',
    setupTime: '30 min',
    icon: 'inbox'
  },
  {
    slug: 'email-to-notion-summary',
    title: 'Email to Notion with AI Summary',
    category: 'Productivity',
    trigger: 'IMAP (Email)',
    nodes: ['IMAP', 'OpenAI', 'Notion', 'Slack'],
    useCase: 'Auto-capture important emails, generate AI summaries, save to Notion database',
    complexity: 'Intermediate',
    setupTime: '45 min',
    icon: 'mail'
  },
  {
    slug: 'invoice-processing-automation',
    title: 'Invoice Processing Pipeline',
    category: 'Finance',
    trigger: 'Email Attachment',
    nodes: ['IMAP', 'Google Vision', 'Airtable', 'QuickBooks', 'Slack'],
    useCase: 'Extract data from invoice PDFs, validate, sync to accounting software',
    complexity: 'Advanced',
    setupTime: '2 hours',
    icon: 'file-text'
  },
  {
    slug: 'social-media-scheduler',
    title: 'Multi-Platform Social Scheduler',
    category: 'Marketing',
    trigger: 'Airtable (Content Calendar)',
    nodes: ['Airtable', 'Twitter', 'LinkedIn', 'Facebook', 'Slack'],
    useCase: 'Schedule and publish content across multiple social platforms from one calendar',
    complexity: 'Intermediate',
    setupTime: '1 hour',
    icon: 'globe'
  },
  {
    slug: 'customer-feedback-analysis',
    title: 'Customer Feedback Analysis',
    category: 'Customer Success',
    trigger: 'Webhook (Survey)',
    nodes: ['Webhook', 'OpenAI', 'Airtable', 'Slack', 'Email'],
    useCase: 'Analyze survey responses with AI, categorize sentiment, alert on negative feedback',
    complexity: 'Intermediate',
    setupTime: '45 min',
    icon: 'message-square'
  },
  {
    slug: 'ecommerce-order-sync',
    title: 'E-commerce Order Sync',
    category: 'Operations',
    trigger: 'WooCommerce (New Order)',
    nodes: ['WooCommerce', 'Airtable', 'Slack', 'Email', 'Inventory API'],
    useCase: 'Sync orders to database, update inventory, notify fulfillment team',
    complexity: 'Intermediate',
    setupTime: '1 hour',
    icon: 'shopping-cart'
  },
  {
    slug: 'appointment-reminder-system',
    title: 'Appointment Reminder System',
    category: 'Operations',
    trigger: 'Schedule (Cron)',
    nodes: ['Cron', 'Airtable', 'Twilio', 'Email', 'Slack'],
    useCase: 'Send SMS and email reminders at configurable intervals before appointments',
    complexity: 'Beginner',
    setupTime: '30 min',
    icon: 'calendar'
  },
  {
    slug: 'competitor-monitoring',
    title: 'Competitor Price Monitoring',
    category: 'Marketing',
    trigger: 'Schedule (Daily)',
    nodes: ['Cron', 'HTTP Request', 'Google Sheets', 'Slack'],
    useCase: 'Scrape competitor prices daily, track changes, alert on significant differences',
    complexity: 'Advanced',
    setupTime: '2 hours',
    icon: 'bar-chart'
  }
];

const categories = [...new Set(workflows.map(w => w.category))];
---

<Layout title="Workflow Library | n8n Expert - Pre-built Templates">
  <!-- Page Header -->
  <section class="page-header">
    <div class="container">
      <span class="badge badge-primary">Workflow Library</span>
      <h1>Pre-built <span class="gradient-text">n8n Templates</span></h1>
      <p class="page-subtitle">
        Ready-to-use workflow templates with documentation and setup guides. 
        Request any template and I'll send it directly to your inbox.
      </p>
    </div>
  </section>

  <!-- Category Filter -->
  <section class="filter-section">
    <div class="container">
      <div class="category-pills">
        <button class="category-pill active" data-category="">All</button>
        {categories.map(category => (
          <button class="category-pill" data-category={category}>{category}</button>
        ))}
      </div>
    </div>
  </section>

  <!-- Workflows Grid -->
  <section class="section">
    <div class="container">
      <div class="workflows-grid" id="workflows-grid">
        {workflows.map(workflow => (
          <article class="workflow-card" data-category={workflow.category}>
            <div class="workflow-header">
              <span class="workflow-icon">
                <Icon name={workflow.icon} size={24} />
              </span>
              <span class="badge">{workflow.category}</span>
            </div>
            <h2>{workflow.title}</h2>
            <p class="workflow-usecase">{workflow.useCase}</p>
            
            <div class="workflow-meta">
              <div class="meta-item">
                <span class="meta-label">Trigger</span>
                <span class="meta-value">{workflow.trigger}</span>
              </div>
              <div class="meta-item">
                <span class="meta-label">Complexity</span>
                <span class="meta-value complexity-{workflow.complexity.toLowerCase()}">{workflow.complexity}</span>
              </div>
              <div class="meta-item">
                <span class="meta-label">Setup Time</span>
                <span class="meta-value">{workflow.setupTime}</span>
              </div>
            </div>

            <div class="workflow-nodes">
              <span class="nodes-label">Key Nodes:</span>
              <div class="nodes-list">
                {workflow.nodes.map(node => (
                  <span class="node-badge">{node}</span>
                ))}
              </div>
            </div>

            <button 
              class="btn btn-primary request-btn" 
              data-workflow={workflow.slug}
              data-title={workflow.title}
            >
              Request Template →
            </button>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- Request Modal -->
  <div id="request-modal" class="modal" style="display: none;">
    <div class="modal-backdrop"></div>
    <div class="modal-content">
      <button class="modal-close" aria-label="Close modal">×</button>
      <div class="modal-header">
        <span class="modal-icon">
          <Icon name="inbox" size={32} />
        </span>
        <h3>Request Template</h3>
        <p class="modal-subtitle" id="modal-workflow-name"></p>
      </div>
      <form id="template-request-form" class="modal-form">
        <input type="hidden" name="workflow_slug" id="workflow-slug" />
        <input type="hidden" name="source" value="workflow-library" />
        
        <div class="form-group floating">
          <input 
            type="text" 
            id="requester-name" 
            name="name" 
            placeholder=" "
            required 
            autocomplete="name"
          />
          <label for="requester-name">
            <Icon name="user" size={18} />
            <span>Your Name</span>
          </label>
          <span class="focus-border"></span>
        </div>

        <div class="form-group floating">
          <input 
            type="email" 
            id="requester-email" 
            name="email" 
            placeholder=" "
            required 
            autocomplete="email"
          />
          <label for="requester-email">
            <Icon name="mail" size={18} />
            <span>Email Address</span>
          </label>
          <span class="focus-border"></span>
        </div>

        <button type="submit" class="btn btn-primary btn-lg submit-btn">
          <span class="btn-text">
            <Icon name="send" size={18} />
            Send Me the Template
          </span>
          <span class="btn-loading">
            <span class="spinner"></span>
            Sending...
          </span>
        </button>
        
        <p class="modal-note">
          <Icon name="clock" size={14} />
          I'll send you the workflow JSON + setup documentation within 24 hours.
        </p>
      </form>

      <div id="modal-success" class="modal-success" style="display: none;">
        <span class="success-icon">
          <Icon name="check-circle" size={48} />
        </span>
        <h4>Request Received!</h4>
        <p>Check your inbox within 24 hours for the template and documentation.</p>
        <button class="btn btn-secondary modal-close-btn">Close</button>
      </div>
    </div>
  </div>

  <!-- Custom Workflow CTA -->
  <section class="section section-alt">
    <div class="container">
      <div class="custom-cta">
        <div class="custom-cta-content">
          <h2>Need a Custom Workflow?</h2>
          <p>
            Don't see what you need? I can build a custom workflow tailored 
            to your specific business processes and tech stack.
          </p>
        </div>
        <a href="/contact" class="btn btn-primary btn-lg">
          Discuss Your Project →
        </a>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Page Header */
  .page-header {
    padding: var(--space-3xl) 0 var(--space-2xl);
    background: linear-gradient(180deg, var(--color-bg) 0%, var(--color-bg-alt) 100%);
    text-align: center;
  }

  .page-header .badge {
    margin-bottom: var(--space-lg);
  }

  .page-header h1 {
    margin-bottom: var(--space-md);
  }

  .page-subtitle {
    font-size: 1.125rem;
    max-width: 550px;
    margin: 0 auto;
  }

  /* Filter Section */
  .filter-section {
    padding: var(--space-lg) 0;
    background-color: var(--color-bg-alt);
    border-bottom: 1px solid var(--color-border);
  }

  .category-pills {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
    justify-content: center;
  }

  .category-pill {
    padding: var(--space-sm) var(--space-md);
    background-color: var(--color-bg-card);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-full);
    font-size: 0.875rem;
    font-weight: 500;
    cursor: pointer;
    transition: all var(--transition-fast);
  }

  .category-pill:hover {
    border-color: var(--color-primary);
    color: var(--color-primary);
  }

  .category-pill.active {
    background-color: var(--color-primary);
    border-color: var(--color-primary);
    color: white;
  }

  /* Workflows Grid */
  .workflows-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-xl);
  }

  @media (min-width: 768px) {
    .workflows-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1280px) {
    .workflows-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  /* Workflow Card */
  .workflow-card {
    background-color: var(--color-bg-card);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    padding: var(--space-xl);
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
    transition: all var(--transition-base);
  }

  .workflow-card:hover {
    box-shadow: var(--shadow-lg);
    transform: translateY(-4px);
  }

  .workflow-card.hidden {
    display: none;
  }

  .workflow-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .workflow-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.1) 0%, rgba(6, 182, 212, 0.1) 100%);
    border-radius: var(--radius-lg);
    color: var(--color-primary);
  }

  .workflow-card h2 {
    font-size: 1.125rem;
    margin: 0;
  }

  .workflow-usecase {
    font-size: 0.875rem;
    margin: 0;
    flex: 1;
  }

  .workflow-meta {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-lg);
  }

  .meta-item {
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
  }

  .meta-label {
    font-size: 0.6875rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text-muted);
  }

  .meta-value {
    font-size: 0.875rem;
    font-weight: 500;
  }

  .complexity-beginner { color: var(--color-success); }
  .complexity-intermediate { color: var(--color-warning); }
  .complexity-advanced { color: var(--color-error); }

  .workflow-nodes {
    padding-top: var(--space-md);
    border-top: 1px solid var(--color-border);
  }

  .nodes-label {
    font-size: 0.75rem;
    color: var(--color-text-muted);
    display: block;
    margin-bottom: var(--space-sm);
  }

  .nodes-list {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
  }

  .node-badge {
    font-size: 0.6875rem;
    padding: 0.125rem 0.5rem;
    background-color: var(--color-bg-alt);
    border-radius: var(--radius-full);
    color: var(--color-text-muted);
  }

  .request-btn {
    margin-top: auto;
  }

  /* Modal */
  .modal {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 100;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-lg);
  }

  .modal-backdrop {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.6);
  }

  .modal-content {
    position: relative;
    z-index: 1;
    background-color: var(--color-bg-card);
    border-radius: var(--radius-xl);
    padding: var(--space-2xl);
    max-width: 420px;
    width: 100%;
    max-height: 90vh;
    overflow-y: auto;
  }

  .modal-close {
    position: absolute;
    top: var(--space-md);
    right: var(--space-md);
    background: none;
    border: none;
    font-size: 1.5rem;
    cursor: pointer;
    color: var(--color-text-muted);
  }

  .modal-header {
    text-align: center;
    margin-bottom: var(--space-xl);
  }

  .modal-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 64px;
    height: 64px;
    margin: 0 auto var(--space-md);
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.1) 0%, rgba(6, 182, 212, 0.1) 100%);
    border-radius: var(--radius-lg);
    color: var(--color-primary);
  }

  .modal-header h3 {
    margin: 0 0 var(--space-sm);
  }

  .modal-subtitle {
    font-size: 0.875rem;
    margin: 0;
    color: var(--color-primary);
    font-weight: 500;
  }

  /* Floating Label Form */
  .modal-form .form-group.floating {
    position: relative;
    margin-bottom: var(--space-xl);
  }

  .modal-form .form-group.floating input {
    width: 100%;
    padding: 1.25rem 1rem 0.5rem 2.75rem;
    background-color: var(--color-bg);
    border: 2px solid var(--color-border);
    border-radius: var(--radius-lg);
    font-size: 1rem;
    color: var(--color-text);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    outline: none;
  }

  .modal-form .form-group.floating input:hover {
    border-color: var(--color-text-muted);
  }

  .modal-form .form-group.floating input:focus {
    border-color: var(--color-primary);
    box-shadow: 0 0 0 4px rgba(59, 130, 246, 0.1);
  }

  .modal-form .form-group.floating label {
    position: absolute;
    left: 2.75rem;
    top: 50%;
    transform: translateY(-50%);
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    font-size: 0.9375rem;
    font-weight: 500;
    color: var(--color-text-muted);
    pointer-events: none;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .modal-form .form-group.floating label :global(.icon) {
    position: absolute;
    left: -1.75rem;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .modal-form .form-group.floating input:focus + label,
  .modal-form .form-group.floating input:not(:placeholder-shown) + label {
    top: 0.5rem;
    transform: translateY(0);
    font-size: 0.75rem;
    color: var(--color-primary);
  }

  .modal-form .form-group.floating input:focus + label :global(.icon),
  .modal-form .form-group.floating input:not(:placeholder-shown) + label :global(.icon) {
    color: var(--color-primary);
  }

  .modal-form .form-group.floating .focus-border {
    position: absolute;
    bottom: 0;
    left: 50%;
    width: 0;
    height: 2px;
    background: linear-gradient(135deg, var(--color-primary) 0%, #06b6d4 100%);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    border-radius: 0 0 var(--radius-lg) var(--radius-lg);
  }

  .modal-form .form-group.floating input:focus ~ .focus-border {
    left: 0;
    width: 100%;
  }

  /* Submit Button */
  .modal-form .submit-btn {
    width: 100%;
    position: relative;
    overflow: hidden;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .modal-form .submit-btn .btn-text {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    transition: all 0.3s ease;
  }

  .modal-form .submit-btn .btn-loading {
    display: none;
    align-items: center;
    gap: var(--space-sm);
  }

  .modal-form .submit-btn.loading .btn-text {
    display: none;
  }

  .modal-form .submit-btn.loading .btn-loading {
    display: inline-flex;
  }

  .modal-form .submit-btn:hover:not(:disabled) {
    transform: translateY(-2px);
  }

  .modal-form .submit-btn:active:not(:disabled) {
    transform: translateY(0);
  }

  /* Spinner Animation */
  .spinner {
    width: 18px;
    height: 18px;
    border: 2px solid transparent;
    border-top-color: currentColor;
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  /* Modal Note */
  .modal-note {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-xs);
    font-size: 0.8125rem;
    text-align: center;
    margin: var(--space-lg) 0 0;
    color: var(--color-text-muted);
  }

  .modal-success {
    text-align: center;
  }

  .modal-success .success-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 80px;
    height: 80px;
    margin: 0 auto var(--space-md);
    color: var(--color-success);
  }

  .modal-success h4 {
    margin: 0 0 var(--space-sm);
  }

  .modal-success p {
    margin-bottom: var(--space-lg);
  }

  /* Custom CTA */
  .custom-cta {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-xl);
    text-align: center;
    padding: var(--space-2xl);
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.1) 0%, rgba(6, 182, 212, 0.1) 100%);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
  }

  .custom-cta-content h2 {
    margin-bottom: var(--space-md);
  }

  .custom-cta-content p {
    max-width: 500px;
    margin: 0;
  }

  @media (min-width: 1024px) {
    .custom-cta {
      flex-direction: row;
      text-align: left;
      justify-content: space-between;
    }
  }
</style>

<script>
  // Category filter
  const categoryPills = document.querySelectorAll('.category-pill');
  const workflowCards = document.querySelectorAll('.workflow-card');

  categoryPills.forEach(pill => {
    pill.addEventListener('click', () => {
      const category = (pill as HTMLElement).dataset.category;
      
      // Update active pill
      categoryPills.forEach(p => p.classList.remove('active'));
      pill.classList.add('active');
      
      // Filter cards
      workflowCards.forEach(card => {
        const cardCategory = (card as HTMLElement).dataset.category;
        if (!category || cardCategory === category) {
          card.classList.remove('hidden');
        } else {
          card.classList.add('hidden');
        }
      });
    });
  });

  // Modal
  const modal = document.getElementById('request-modal');
  const modalBackdrop = modal?.querySelector('.modal-backdrop');
  const modalClose = modal?.querySelector('.modal-close');
  const modalCloseBtn = modal?.querySelector('.modal-close-btn');
  const modalWorkflowName = document.getElementById('modal-workflow-name');
  const workflowSlugInput = document.getElementById('workflow-slug') as HTMLInputElement;
  const requestForm = document.getElementById('template-request-form') as HTMLFormElement;
  const modalSuccess = document.getElementById('modal-success');

  const requestButtons = document.querySelectorAll('.request-btn');

  function openModal(slug: string, title: string) {
    if (modal && modalWorkflowName && workflowSlugInput) {
      modalWorkflowName.textContent = title;
      workflowSlugInput.value = slug;
      modal.style.display = 'flex';
      requestForm.style.display = 'block';
      modalSuccess!.style.display = 'none';
      document.body.style.overflow = 'hidden';
    }
  }

  function closeModal() {
    if (modal) {
      modal.style.display = 'none';
      document.body.style.overflow = '';
    }
  }

  requestButtons.forEach(btn => {
    btn.addEventListener('click', () => {
      const slug = (btn as HTMLElement).dataset.workflow || '';
      const title = (btn as HTMLElement).dataset.title || '';
      openModal(slug, title);
    });
  });

  modalBackdrop?.addEventListener('click', closeModal);
  modalClose?.addEventListener('click', closeModal);
  modalCloseBtn?.addEventListener('click', closeModal);

  // Form submission
  requestForm?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const submitBtn = requestForm.querySelector('.submit-btn') as HTMLButtonElement;

    submitBtn.disabled = true;
    submitBtn.classList.add('loading');

    try {
      const formData = new FormData(requestForm);
      const data = Object.fromEntries(formData.entries());

      // Send to n8n webhook
      const webhookUrl = 'https://your-n8n-instance.com/webhook/lead-template';
      
      await fetch(webhookUrl, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data),
      });

      // Track analytics
      if (typeof window !== 'undefined' && (window as any).gtag) {
        (window as any).gtag('event', 'submit_form_template', {
          'event_category': 'lead',
          'event_label': data.workflow_slug
        });
      }

      requestForm.style.display = 'none';
      modalSuccess!.style.display = 'block';
    } catch (error) {
      console.error('Form error:', error);
      alert('Something went wrong. Please try again or email directly.');
    } finally {
      submitBtn.disabled = false;
      submitBtn.classList.remove('loading');
    }
  });
</script>
