      <p class="page-subtitle">
        Ready-to-use workflow templates with documentation and setup guides. 
        Request any template and I'll send it directly to your inbox.
      </p>
    </div>
  </section>

  <!-- Category Filter -->
  <section class="filter-section">
    <div class="container">
      <div class="category-pills">
        <button class="category-pill active" data-category="">All</button>
        {categories.map(category => (
          <button class="category-pill" data-category={category}>{category}</button>
        ))}
      </div>
    </div>
  </section>

  <!-- Workflows Grid -->
  <section class="section">
    <div class="container">
      <div class="workflows-grid" id="workflows-grid">
        {workflows.map(workflow => (
          <article class="workflow-card" data-category={workflow.category}>
            <div class="workflow-header">
              <span class="workflow-icon">{workflow.icon}</span>
              <span class="badge">{workflow.category}</span>
            </div>
            <h2>{workflow.title}</h2>
            <p class="workflow-usecase">{workflow.useCase}</p>
            
            <div class="workflow-meta">
              <div class="meta-item">
                <span class="meta-label">Trigger</span>
                <span class="meta-value">{workflow.trigger}</span>
              </div>
              <div class="meta-item">
                <span class="meta-label">Complexity</span>
                <span class="meta-value complexity-{workflow.complexity.toLowerCase()}">{workflow.complexity}</span>
              </div>
              <div class="meta-item">
                <span class="meta-label">Setup Time</span>
                <span class="meta-value">{workflow.setupTime}</span>
              </div>
            </div>

            <div class="workflow-nodes">
              <span class="nodes-label">Key Nodes:</span>
              <div class="nodes-list">
                {workflow.nodes.map(node => (
                  <span class="node-badge">{node}</span>
                ))}
              </div>
            </div>

            <button 
              class="btn btn-primary request-btn" 
              data-workflow={workflow.slug}
              data-title={workflow.title}
            >
              Request Template â†’
