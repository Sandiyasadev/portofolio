---
import Icon from '../ui/Icon.astro';

interface Integration {
  name: string;
  icon: string;
}

interface Props {
  label?: string;
  integrations: Integration[];
}

const { label = 'Integrated with 50+ platforms including:', integrations } = Astro.props;
---

<section class="proof-bar">
  <div class="container">
    <p class="proof-label">{label}</p>
    <div class="proof-logos">
      {integrations.map(({ name, icon }) => (
        <div class="proof-logo" title={name}>
          <span class="proof-icon">
            <Icon name={icon} size={24} />
          </span>
          <span class="proof-name">{name}</span>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .proof-bar {
    padding: var(--space-xl) 0;
    background-color: var(--color-bg-alt);
    border-top: 1px solid var(--color-border);
    border-bottom: 1px solid var(--color-border);
  }

  .proof-label {
    text-align: center;
    font-size: 0.875rem;
    color: var(--color-text-muted);
    margin-bottom: var(--space-lg);
  }

  .proof-logos {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--space-lg);
  }

  .proof-logo {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-xs);
    opacity: 0.7;
    transition: opacity var(--transition-fast);
  }

  .proof-logo:hover {
    opacity: 1;
  }

  .proof-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-text-muted);
  }

  .proof-name {
    font-size: 0.75rem;
    color: var(--color-text-muted);
  }
</style>
