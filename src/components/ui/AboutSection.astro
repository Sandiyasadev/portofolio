---
interface AboutEntry {
  date: string;
  category: string;
  title: string;
  snippet: string;
}

const entries: AboutEntry[] = [
  {
    date: "Dec 2025",
    category: "Philosophy",
    title: "Mengapa Kode yang Baik Itu Penting",
    snippet: "Kode bukan hanya tentang membuat sesuatu bekerja. Ini tentang menciptakan solusi yang elegan, maintainable, dan dapat dipahami oleh developer lain â€” termasuk diri kita di masa depan."
  },
  {
    date: "Nov 2025",
    category: "Experience",
    title: "Perjalanan Menjadi Developer",
    snippet: "Dimulai dari rasa penasaran tentang cara website bekerja, hingga akhirnya menemukan passion dalam membangun produk digital yang memberikan impact nyata."
  }
];
---

<section id="about" class="about-section">
  <!-- Background Pattern -->
  <div class="about-pattern"></div>

  <div class="about-container">
    <!-- Section Header -->
    <div class="about-header">
      <h2 class="about-title">Developer's Journal</h2>
      <div class="about-divider">
        <span class="divider-line"></span>
        <span class="divider-text">Thoughts & Experiences</span>
        <span class="divider-line"></span>
      </div>
    </div>

    <!-- Entries -->
    <div class="about-entries">
      {entries.map(entry => (
        <article class="about-entry">
          <div class="entry-meta">
            <span class="entry-date">{entry.date}</span>
            <span class="entry-dot"></span>
            <span class="entry-category">{entry.category}</span>
          </div>
          <h3 class="entry-title">{entry.title}</h3>
          <p class="entry-snippet">"{entry.snippet}"</p>
          <div class="entry-read-more">
            <span>Read Full Entry</span>
            <span class="read-more-line"></span>
          </div>
        </article>
      ))}
    </div>

    <!-- CTA -->
    <div class="about-cta">
      <button class="about-btn">
        Explore the Knowledge Base
      </button>
    </div>
  </div>
</section>

<style>
  .about-section {
    padding: 8rem 0;
    background: var(--color-bg-dark);
    color: white;
    position: relative;
    overflow: hidden;
  }

  .about-pattern {
    position: absolute;
    inset: 0;
    opacity: 0.1;
    background-image: radial-gradient(white 0.5px, transparent 0);
    background-size: 30px 30px;
    pointer-events: none;
  }

  .about-container {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 2rem;
    position: relative;
    z-index: 10;
  }

  .about-header {
    text-align: center;
    margin-bottom: 6rem;
  }

  .about-title {
    font-family: var(--font-serif);
    font-size: clamp(2.5rem, 6vw, 4.5rem);
    font-weight: 700;
    font-style: italic;
    letter-spacing: -0.02em;
    margin-bottom: 2rem;
    opacity: 0.9;
  }

  .about-divider {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
  }

  .divider-line {
    width: 3rem;
    height: 1px;
    background: var(--color-accent);
  }

  .divider-text {
    font-family: var(--font-mono);
    font-size: 0.6875rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5em;
    color: var(--color-accent);
  }

  /* Entries */
  .about-entries {
    display: flex;
    flex-direction: column;
    gap: 6rem;
  }

  .about-entry {
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    padding-bottom: 4rem;
    cursor: pointer;
    transition: border-color 0.3s ease;
  }

  .about-entry:hover {
    border-color: rgba(0, 59, 92, 0.5);
  }

  .entry-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    font-family: var(--font-mono);
    font-size: 0.625rem;
    text-transform: uppercase;
    letter-spacing: 0.3em;
    margin-bottom: 1.5rem;
  }

  .entry-date {
    color: rgba(255, 255, 255, 0.4);
  }

  .entry-dot {
    width: 0.375rem;
    height: 0.375rem;
    background: var(--color-accent);
    border-radius: 50%;
  }

  .entry-category {
    color: var(--color-accent);
    font-weight: 700;
  }

  .entry-title {
    font-family: var(--font-serif);
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 700;
    margin-bottom: 2rem;
    line-height: 1.3;
    transition: color 0.3s ease;
  }

  .about-entry:hover .entry-title {
    color: var(--color-accent);
  }

  .entry-snippet {
    font-family: var(--font-serif);
    font-size: 1.25rem;
    font-weight: 300;
    font-style: italic;
    color: rgba(255, 255, 255, 0.6);
    line-height: 1.8;
    margin-bottom: 2.5rem;
  }

  .entry-read-more {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-family: var(--font-mono);
    font-size: 0.6875rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: rgba(255, 255, 255, 0.6);
    transition: color 0.3s ease;
  }

  .about-entry:hover .entry-read-more {
    color: white;
  }

  .read-more-line {
    width: 2rem;
    height: 1px;
    background: rgba(255, 255, 255, 0.2);
    transition: all 0.3s ease;
  }

  .about-entry:hover .read-more-line {
    width: 3rem;
    background: var(--color-accent);
  }

  /* CTA */
  .about-cta {
    margin-top: 6rem;
    text-align: center;
  }

  .about-btn {
    padding: 1.25rem 3rem;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 9999px;
    background: transparent;
    color: white;
    font-family: var(--font-mono);
    font-size: 0.6875rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .about-btn:hover {
    background: white;
    color: var(--color-bg-dark);
  }
</style>
