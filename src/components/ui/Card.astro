---
interface Props {
  href?: string;
  class?: string;
}

const { href, class: className = '' } = Astro.props;

const classes = ['card', className].filter(Boolean).join(' ');
---

{href ? (
  <a href={href} class={classes}>
    <slot />
  </a>
) : (
  <div class={classes}>
    <slot />
  </div>
)}
