---
import { getCollection } from 'astro:content';

const allProjects = await getCollection('projects');
const projects = allProjects
  .filter(p => p.data.featured)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 3);
---

<section id="projects" class="projects-section">
  <div class="projects-container">
    <!-- Section Header -->
    <div class="projects-header">
      <span class="section-label">Featured Work</span>
      <h2 class="section-title">Recent Projects</h2>
      <p class="section-desc">
        Beberapa project yang telah saya kerjakan, menunjukkan keahlian dalam berbagai teknologi dan domain.
      </p>
    </div>

    <!-- Projects Grid -->
    <div class="projects-grid">
      {projects.map((project, index) => (
        <a href={`/projects/${project.slug}`} class="project-card">
          <!-- Project Image Placeholder -->
          <div class="project-image">
            <div class="project-image-placeholder">
              <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
                <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                <circle cx="8.5" cy="8.5" r="1.5"></circle>
                <polyline points="21 15 16 10 5 21"></polyline>
              </svg>
              <span>Project {index + 1}</span>
            </div>
            <div class="project-overlay">
              <span class="view-detail">Lihat Detail</span>
            </div>
          </div>

          <!-- Project Info -->
          <div class="project-info">
            <h3 class="project-title">{project.data.title}</h3>
            <p class="project-description">{project.data.description}</p>
            <div class="project-tags">
              {project.data.tags.map(tag => (
                <span class="project-tag">{tag}</span>
              ))}
            </div>
          </div>
        </a>
      ))}
    </div>

    <!-- View All Button -->
    <div class="projects-footer">
      <a href="/projects" class="view-all-btn">
        <span>Lihat Semua Project</span>
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="5" y1="12" x2="19" y2="12"></line>
          <polyline points="12 5 19 12 12 19"></polyline>
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  .projects-section {
    position: relative;
    z-index: 1;
    padding: 8rem 0;
    background: var(--color-bg-primary);
    border-top: 1px solid var(--color-border);
  }

  .projects-container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .projects-header {
    max-width: 600px;
    margin-bottom: 4rem;
  }

  .section-label {
    display: block;
    font-family: var(--font-mono);
    font-size: 0.625rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.4em;
    color: var(--color-accent);
    margin-bottom: 1rem;
  }

  .section-title {
    font-family: var(--font-serif);
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    font-weight: 700;
    letter-spacing: -0.02em;
    margin-bottom: 1.5rem;
  }

  .section-desc {
    font-size: 1.125rem;
    font-weight: 300;
    color: var(--color-text-secondary);
    line-height: 1.7;
  }

  /* Projects Grid */
  .projects-grid {
    display: grid;
    gap: 2rem;
    grid-template-columns: 1fr;
  }

  @media (min-width: 768px) {
    .projects-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .projects-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  /* Project Card */
  .project-card {
    display: block;
    text-decoration: none;
    color: inherit;
    background: white;
    border: 1px solid var(--color-border);
    border-radius: 1.5rem;
    overflow: hidden;
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .project-card:hover {
    border-color: var(--color-accent-border);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
    transform: translateY(-8px);
  }

  .project-card:hover .project-title {
    color: var(--color-accent);
  }

  .project-image {
    position: relative;
    aspect-ratio: 16/10;
    background: var(--color-bg-card);
    overflow: hidden;
  }

  .project-image-placeholder {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    color: var(--color-text-muted);
  }

  .project-image-placeholder span {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    font-weight: 500;
  }

  .project-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(0, 59, 92, 0.9) 0%, rgba(0, 30, 50, 0.95) 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  .project-card:hover .project-overlay {
    opacity: 1;
  }

  .view-detail {
    font-family: var(--font-mono);
    font-size: 0.6875rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: white;
    padding: 0.75rem 1.5rem;
    border: 1px solid rgba(255, 255, 255, 0.3);
    border-radius: 9999px;
    transform: translateY(10px);
    transition: all 0.4s ease;
  }

  .project-card:hover .view-detail {
    transform: translateY(0);
  }

  .project-info {
    padding: 1.5rem;
  }

  .project-title {
    font-family: var(--font-serif);
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: 0.75rem;
    transition: color 0.3s ease;
  }

  .project-description {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin-bottom: 1.25rem;
  }

  .project-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .project-tag {
    font-family: var(--font-mono);
    font-size: 0.625rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-accent);
    background: var(--color-accent-light);
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
  }

  /* Footer */
  .projects-footer {
    position: relative;
    z-index: 10;
    margin-top: 4rem;
    text-align: center;
  }

  .view-all-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    background: var(--color-bg-dark);
    color: white;
    padding: 1rem 2rem;
    border-radius: 9999px;
    font-weight: 600;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .view-all-btn:hover {
    background: var(--color-accent);
    gap: 1.25rem;
    transform: translateY(-2px);
  }
</style>
