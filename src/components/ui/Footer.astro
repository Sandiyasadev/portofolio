  name = "Developer Name",
  email = "hello@developer.com",
  location = "Jakarta, Indonesia",
  availableFor = "H1 2026"
} = Astro.props;

const socialLinks = [
  { name: 'GitHub', icon: 'github' },
  { name: 'Twitter', icon: 'twitter' },
  { name: 'LinkedIn', icon: 'linkedin' }
];
---

<footer id="contact" class="footer">
  <div class="footer-container">
    <div class="footer-main">
      <!-- Left: CTA -->
      <div class="footer-cta">
        <h2 class="footer-heading" data-animate="text-reveal">
          Mari membangun <span class="accent">sesuatu</span> bersama.
        </h2>
        <p class="footer-desc" data-animate="blur-in" data-delay="1">
          Tersedia untuk project freelance, kolaborasi open-source, atau posisi full-time yang menantang.
        </p>
        <div class="social-links" data-animate="fade-up" data-delay="2">
