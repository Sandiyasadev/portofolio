---
import Badge from '../ui/Badge.astro';

interface Props {
  industry: string;
  title: string;
  metric: string;
  description: string;
  slug: string;
}

const { industry, title, metric, description, slug } = Astro.props;
---

<article class="case-card card">
  <Badge>{industry}</Badge>
  <h3>{title}</h3>
  <div class="case-metric">
    <span class="metric-value">{metric}</span>
  </div>
  <p>{description}</p>
  <a href={`/case-studies/${slug}`} class="case-link">
    Read full breakdown â†’
  </a>
</article>

<style>
  .case-card :global(.badge) {
    margin-bottom: var(--space-md);
  }

  .case-card h3 {
    font-size: 1.125rem;
    margin-bottom: var(--space-md);
  }

  .case-metric {
    margin-bottom: var(--space-md);
  }

  .metric-value {
    font-size: 1.5rem;
    font-weight: 800;
    color: var(--color-success);
  }

  .case-card p {
    font-size: 0.875rem;
    margin-bottom: var(--space-md);
  }

  .case-link {
    color: var(--color-primary);
    font-weight: 600;
    font-size: 0.875rem;
  }
</style>
