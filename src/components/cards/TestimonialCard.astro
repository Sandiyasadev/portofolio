---
interface Props {
  quote: string;
  name: string;
  role: string;
  company: string;
  avatar?: string;
}

const { quote, name, role, company, avatar = 'ðŸ‘¤' } = Astro.props;
---

<blockquote class="testimonial-card card">
  <div class="testimonial-quote">
    <span class="quote-mark">"</span>
    <p>{quote}</p>
  </div>
  <footer class="testimonial-author">
    <span class="author-avatar">{avatar}</span>
    <div class="author-info">
      <strong>{name}</strong>
      <span>{role}, {company}</span>
    </div>
  </footer>
</blockquote>

<style>
  .testimonial-card {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
  }

  .testimonial-quote {
    flex: 1;
  }

  .quote-mark {
    font-size: 3rem;
    line-height: 1;
    color: var(--color-primary);
    opacity: 0.5;
  }

  .testimonial-quote p {
    font-size: 0.9375rem;
    font-style: italic;
    line-height: 1.7;
  }

  .testimonial-author {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    padding-top: var(--space-md);
    border-top: 1px solid var(--color-border);
  }

  .author-avatar {
    font-size: 2rem;
  }

  .author-info {
    display: flex;
    flex-direction: column;
  }

  .author-info strong {
    color: var(--color-text);
  }

  .author-info span {
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }
</style>
