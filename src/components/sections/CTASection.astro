---
import Button from '../ui/Button.astro';

interface Props {
  title: string;
  description?: string;
  buttonText: string;
  buttonHref?: string;
  note?: string;
}

const { 
  title, 
  description, 
  buttonText, 
  buttonHref = '/contact',
  note 
} = Astro.props;
---

<section class="cta-section section">
  <div class="container">
    <div class="cta-box reveal-scale">
      <h2>{title}</h2>
      {description && <p class="cta-desc">{description}</p>}
      <Button href={buttonHref} variant="primary" size="lg">
        {buttonText}
      </Button>
      {note && <span class="cta-note">{note}</span>}
    </div>
  </div>
</section>

<style>
  .cta-box {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
    padding: var(--space-2xl);
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.1) 0%, rgba(6, 182, 212, 0.1) 100%);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
  }

  .cta-box h2 {
    margin-bottom: var(--space-md);
  }

  .cta-desc {
    margin-bottom: var(--space-xl);
    font-size: 1.0625rem;
  }

  .cta-note {
    display: block;
    font-size: 0.875rem;
    color: var(--color-text-muted);
    margin-top: var(--space-lg);
  }
</style>
