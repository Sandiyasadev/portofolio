---
import Button from '../ui/Button.astro';

interface Props {
  title: string;
  description?: string;
  buttonText: string;
  buttonHref?: string;
  note?: string;
}

const { 
  title, 
  description, 
  buttonText, 
  buttonHref = '/contact',
  note 
} = Astro.props;
---

<section class="cta-section section">
  <div class="container">
    <div class="cta-content">
      <h2>{title}</h2>
      {description && <p class="cta-desc">{description}</p>}
      <div class="cta-actions">
        <Button href={buttonHref} variant="primary" size="lg">
          {buttonText}
        </Button>
      </div>
      {note && <span class="cta-note">{note}</span>}
    </div>
  </div>
</section>

<style>
  .cta-section {
    background-color: var(--color-bg-alt);
  }

  .cta-content {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
    padding: var(--space-2xl) 0;
  }

  .cta-content h2 {
    margin-bottom: var(--space-md);
    font-size: clamp(2rem, 4vw, 2.5rem);
    font-weight: 600;
  }

  .cta-desc {
    margin-bottom: var(--space-xl);
    font-size: 1.125rem;
    color: var(--color-text-muted);
    line-height: 1.5;
  }

  .cta-actions {
    display: flex;
    justify-content: center;
    gap: var(--space-md);
  }

  .cta-note {
    display: block;
    font-size: 0.875rem;
    color: var(--color-text-muted);
    margin-top: var(--space-lg);
  }
</style>
