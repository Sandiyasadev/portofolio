---
interface Props {
  title: string;
  highlight?: string;
  description?: string;
  class?: string;
}

const { title, highlight, description, class: className = '' } = Astro.props;
---

<div class={`section-header ${className}`}>
  <h2>
    {title} {highlight && <span class="gradient-text">{highlight}</span>}
  </h2>
  {description && <p>{description}</p>}
</div>

<style>
  .section-header {
    text-align: center;
    max-width: 700px;
    margin: 0 auto var(--space-2xl);
  }

  .section-header h2 {
    margin-bottom: var(--space-md);
  }

  .section-header p {
    font-size: 1.125rem;
  }
</style>
