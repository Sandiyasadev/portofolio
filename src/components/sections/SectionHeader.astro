---
interface Props {
  title: string;
  highlight?: string;
  description?: string;
  class?: string;
}

const { title, highlight, description, class: className = '' } = Astro.props;
---

<div class={`section-header ${className}`}>
  <h2>
    {title}{highlight && <> <span class="gradient-text">{highlight}</span></>}
  </h2>
  {description && <p>{description}</p>}
</div>

<style>
  .section-header {
    text-align: center;
    max-width: 700px;
    margin: 0 auto var(--space-2xl);
  }

  .section-header h2 {
    margin-bottom: var(--space-md);
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 600;
    letter-spacing: -0.01em;
  }

  .section-header p {
    font-size: 1.125rem;
    color: var(--color-text-muted);
    line-height: 1.5;
  }
</style>
