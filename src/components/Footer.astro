---
const serviceLinks = [
  { href: '/services#audit', label: 'Automation Audit' },
  { href: '/services#development', label: 'Workflow Development' },
  { href: '/services#integration', label: 'Integration & Data Sync' },
  { href: '/services#ai', label: 'AI + Automation' },
];

const resourceLinks = [
  { href: '/case-studies', label: 'Case Studies' },
  { href: '/workflow-library', label: 'Workflow Library' },
  { href: '/blog', label: 'Blog' },
  { href: '/about', label: 'About' },
];

const connectLinks = [
  { href: '/contact', label: 'Contact' },
  { href: 'https://linkedin.com', label: 'LinkedIn', external: true },
  { href: 'https://github.com', label: 'GitHub', external: true },
];

const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="container">
    <div class="footer-grid">
      <div class="footer-links">
        <h4>Services</h4>
        <ul>
          {serviceLinks.map(({ href, label }) => (
            <li><a href={href}>{label}</a></li>
          ))}
        </ul>
      </div>
      
      <div class="footer-links">
        <h4>Resources</h4>
        <ul>
          {resourceLinks.map(({ href, label }) => (
            <li><a href={href}>{label}</a></li>
          ))}
        </ul>
      </div>
      
      <div class="footer-links">
        <h4>Connect</h4>
        <ul>
          {connectLinks.map(({ href, label, external }) => (
            <li>
              <a href={href} target={external ? '_blank' : undefined} rel={external ? 'noopener' : undefined}>
                {label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
    
    <div class="footer-bottom">
      <p>Copyright Â© {currentYear} Sandiyasa. All rights reserved.</p>
      <div class="footer-legal">
        <a href="/privacy">Privacy Policy</a>
        <a href="/terms">Terms of Use</a>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: var(--color-bg-alt);
    border-top: 1px solid var(--color-border);
    padding: var(--space-2xl) 0 var(--space-lg);
  }
  
  .footer-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-xl) var(--space-lg);
    margin-bottom: var(--space-xl);
  }
  
  .footer-links h4 {
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: var(--space-sm);
    letter-spacing: 0;
  }
  
  .footer-links ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .footer-links li {
    margin-bottom: 0.25rem;
  }
  
  .footer-links a {
    color: var(--color-text-muted);
    font-size: 0.75rem;
    line-height: 1.6;
    text-decoration: none !important;
    transition: color var(--transition-fast);
  }
  
  .footer-links a:hover {
    color: var(--color-text);
  }
  
  .footer-bottom {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: var(--space-sm);
    padding-top: var(--space-lg);
    border-top: 1px solid var(--color-border);
    font-size: 0.75rem;
    color: var(--color-text-muted);
  }
  
  .footer-bottom p {
    margin: 0;
    font-size: 0.75rem;
  }
  
  .footer-legal {
    display: flex;
    gap: var(--space-lg);
  }
  
  .footer-legal a {
    color: var(--color-text-muted);
    text-decoration: none !important;
    transition: color var(--transition-fast);
  }

  .footer-legal a:hover {
    color: var(--color-text);
  }
  
  @media (min-width: 640px) {
    .footer-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (min-width: 768px) {
    .footer {
      padding: var(--space-2xl) 0;
    }
    
    .footer-bottom {
      flex-direction: row;
      justify-content: space-between;
      text-align: left;
    }
  }
</style>
